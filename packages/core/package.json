{
  "name": "@fetchdesigns/theme-toggle-core",
  "version": "1.0.0",
  "description": "Framework-agnostic theme management core",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "theme",
    "dark-mode",
    "theme-toggle",
    "theme-manager"
  ],
  "author": "Fetch Designs",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fetchdesigns/theme-toggle.git",
    "directory": "packages/core"
  },
  "devDependencies": {
    "@vitest/browser": "^3.2.4",
    "jsdom": "^25.0.1",
    "tsup": "^8.0.0",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  }
}
