{
  "name": "@fetchdesigns/theme-toggle-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Theme toggle components for React frameworks - monorepo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "dev": "npm run dev --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.4.5",
    "tsup": "^8.0.0",
    "vitest": "^3.2.4",
    "prettier": "^3.2.5",
    "eslint": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fetchdesigns/theme-toggle.git"
  },
  "keywords": [
    "theme",
    "dark-mode",
    "react",
    "react-router",
    "ssr",
    "monorepo"
  ],
  "author": "Fetch Designs",
  "license": "MIT"
}
